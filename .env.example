# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# ============================================================================
# OpenAI API Configuration
# ============================================================================
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE

# ============================================================================
# Pinecone Configuration
# ============================================================================
PINECONE_API_KEY=pcsk_YOUR_KEY_HERE
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=robeck-dental-v2

# ============================================================================
# Database Configuration (Local Development)
# ============================================================================
DB_USER=postgres
DB_PASSWORD=localdevpassword
DB_NAME=dental_chatbot_local
DB_HOST=localhost
DB_PORT=5432

# ============================================================================
# Database Configuration (Docker/Production)
# ============================================================================
# When running with docker-compose, use these:
# DB_USER=postgres
# DB_PASSWORD=CHANGE_THIS_IN_PRODUCTION
# DB_NAME=dental_chatbot_prod
# DB_HOST=db
# DB_PORT=5432

# ============================================================================
# PostgreSQL Configuration (for docker-compose)
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=localdevpassword
POSTGRES_DB=dental_chatbot_local

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:5500,http://localhost:8000

# ============================================================================
# Security
# ============================================================================
# Generate a secure random key for production
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=local-dev-secret-key-not-for-production
